<div class="title d-flex justify-content-between mb-3">
  <h2><%= @article.title %>  </h2>
  <div class="d-flex justify-content-end">
    <h2><%= link_to icon('fa-solid fa-pen-to-square', 'Edit'), edit_article_path(@article) %></h2>
    <h2><%= link_to icon("fa-solid fa-trash-can", 'Delete'), article_path(@article),
                          method: :delete,
                          data: { confirm: "Are you sure?"} %></h2>
  </div>

</div>
<p><%= @article.content %></p>
